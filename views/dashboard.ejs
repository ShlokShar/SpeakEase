<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpeakEase</title>
    <link href="/css/output.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&family=Inclusive+Sans:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-[#FBFBFE] h-[86vh]">
    <div class="w-full flex flex-col space-y-4 px-6 pt-6 h-full">
        <div class="w-full flex flex-row justify-between items-center">
            <img src="../img/logo.png" draggable="false" width="160px">
            <div class="flex flex-row space-x-4 items-center">
                <a href="/logout" class="cursor-pointer">Log Out</a>
            </div>
        </div>
        <br>
        <div class="w-full flex flex-row h-full pb-2">
            <div class="flex flex-col space-y-2.5 pr-6">
                <div onclick="switchSection('chatbot-container')" class="relative w-full max-w-md mx-auto cursor-pointer">
                    <img src="/img/chatbot.png" alt="Example" class="w-full h-auto" />
                    <div class="flex flex-col absolute inset-0 items-center justify-center">
                        <p class="text-white text-2xl font-bold">Chatbot</p>
                        <p class="text-[#AAA7FC] text-xl">chatbot</p>
                    </div>
                </div>
                <div onclick="switchSection('vocabulary-container')" class="relative w-full max-w-md mx-auto cursor-pointer">
                    <img src="/img/vocab.png" alt="Example" class="w-full h-auto" />
                    <div class="flex flex-col absolute inset-0 items-center justify-center">
                        <p class="text-white text-2xl font-bold">Vocabulary</p>
                        <p class="text-[#AAA7FC] text-xl">vocabulario</p>
                    </div>
                </div>
                <div onclick="switchSection('grammar-container')" class="relative w-full max-w-md mx-auto cursor-pointer">
                    <img src="/img/grammar.png" alt="Example" class="w-full h-auto" />
                    <div class="flex flex-col absolute inset-0 items-center justify-center">
                        <p class="text-white text-2xl font-bold">Grammar</p>
                        <p class="text-[#AAA7FC] text-xl">gramÃ¡tica</p>
                    </div>
                </div>
            </div>
            <div id="chatbot-container" class="max-w-[900px] grow flex flex-col bg-[#D1D1D1] rounded-[15px]" style="display: flex;">
                <div class="w-full bg-[#544DEA] rounded-t-[15px]">
                    <p class="px-3 py-2 font-[Fredoka] text-[18px] text-white">SpeakBot</p>
                </div>
                <div id="chat-container" class="grow px-2 py-3 flex flex-col space-y-2 h-[78vh] overflow-y-auto">
                    <% for (let i = 0; i < chatLog.length; i++) { %>
                        <% if (i % 2 == 0) { %>
                            <div class="flex space-x-2">
                                <p class="text-3xl">ðŸŒŽ</p>
                                <p class="max-w-[250px] bg-white p-2 rounded-b-[15px] rounded-r-[15px] text-[14px]"><%=chatLog[i].split(":")[1]%></p>
                            </div>
                        <% } else { %>
                            <div class="flex space-x-2">
                                <p class="grow"></p>
                                <p class="max-w-[250px] text-white bg-[#544DEA] p-2 rounded-b-[15px] rounded-l-[15px] text-[14px]"><%=chatLog[i].split(":")[1]%></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div class="w-full flex flex-row space-x-4 p-2">
                    <input id="input-element" class="bg-white px-2 py-0.5 rounded-[15px] w-full" placeholder="Type Here â€” escribe aquÃ­">
                    <button onclick="sendText()" class="bg-[#544DEA] px-3 rounded-[18px] text-white">Send</button>
                </div>
            </div>
            <div id="vocabulary-container" class="max-w-[900px] grow flex flex-col bg-[#e1dede] rounded-[15px]" style="display: none;">
                <div id="vocabulary-questions-container" class="grow px-2 py-3 flex flex-col space-y-2 h-[78vh] overflow-y-auto justify-center items-center font-[Fredoka]">
                    <div class="w-[400px] p-2">
                        <div style="display: none;" class="flex flex-col">
                            <p class="text-[18px]"></p>
                            <form class="text-[16px]">
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="1"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="2"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="3"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="4"><label></label>
                                </div>
                            </form>
                        </div>
                        <div style="display: flex;" class="flex flex-col">
                            <p class="text-[18px]">Create Vocabulary Quiz</p>
                            <form id="create-vocab-form" class="text-[16px]">

                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="office" type="checkbox" value="office"><label>Office</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="school" type="checkbox" value="school"><label>School</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="daily life" type="checkbox" value="daily life"><label>Daily Life</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="emergency & safety" type="checkbox" value="emergency & safety"><label>Emergency & Safety</label>
                                </div>
                                <div>
                                    <button type="submit" class="bg-[#544DEA] px-3 py-0.5 text-white rounded-[15px] mt-1">Create</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div id="grammar-container" class="max-w-[900px] grow flex flex-col bg-[#e1dede] rounded-[15px]" style="display: none;">
                <div id="grammar-questions-container" class="grow px-2 py-3 flex flex-col space-y-2 h-[78vh] overflow-y-auto justify-center items-center font-[Fredoka]">
                    <div class="w-[400px] p-2">
                        <div style="display: none;" class="flex flex-col">
                            <p class="text-[18px]"></p>
                            <form class="text-[16px]">
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="1"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="2"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="3"><label></label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="vocabulary" type="radio" value="4"><label></label>
                                </div>
                            </form>
                        </div>
                        <div style="display: flex;" class="flex flex-col">
                            <p class="text-[18px]">Create Grammar Quiz</p>
                            <form id="create-grammar-form" class="text-[16px]">

                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="office" type="checkbox" value="present tense"><label>Present Tense</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="school" type="checkbox" value="preterite tense"><label>Preterite Tense</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="daily life" type="checkbox" value="future tenses"><label>Future Tense</label>
                                </div>
                                <div class="flex flex-row space-x-2 items-center">
                                    <input name="emergency & safety" type="checkbox" value="perfect tenses"><label>Perfect Tenses</label>
                                </div>
                                <div>
                                    <button type="submit" class="bg-[#544DEA] px-3 py-0.5 text-white rounded-[15px] mt-1">Create</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const chatContainer = document.getElementById('chat-container');
        chatContainer.scrollTop = chatContainer.scrollHeight;

        let currentSection = "chatbot-container";

        const switchSection = (newSection) => {
            document.getElementById(currentSection).style = "display: none;";
            document.getElementById(newSection).style = "display: flex";
            currentSection = newSection;
        }
    </script>
    <script src="/js/dashboard.js"></script>
</body>
</html>